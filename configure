#!/bin/sh

prefix=/usr/local
debugsym=true

for arg in "$@"; do
    case "$arg" in
    --prefix=*)
        prefix=`echo $arg | sed 's/--prefix=//'`
        ;;

    --enable-debug)
        debugsym=true;;
    --disable-debug)
        debugsym=false;;

    --help)
        echo 'usage: ./configure [options]'
        echo 'options:'
        echo '  --prefix=<path>: installation prefix'
        # echo '  --enable-debug: include debug symbols'
        # echo '  --disable-debug: do not include debug symbols'
        echo 'all invalid options are silently ignored'
        exit 0
        ;;
    esac
done

mkdir bin
echo 'generating makefile ...'
echo "##########################################"  > Makefile
echo "#       !!! A T E N T I O N !!!          #" >> Makefile
echo "# This file is produced by configure.    #" >> Makefile
echo "# Any modification will be lost on       #" >> Makefile
echo "# next configure call.                   #" >> Makefile
echo "# If needed, modify Makefile.in instead. #" >> Makefile
echo "##########################################" >> Makefile
echo "PREFIX = $prefix" >> Makefile
# if $debugsym; then
#     echo 'dbg = -g' >>Makefile
# fi
cat Makefile.in >>Makefile
echo 'configuration complete, type make to build.'